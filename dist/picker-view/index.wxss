.picker-view {
  width: 100%;
  display: flex;
  z-index:12;
  background-color: #fff;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 50vh;
}
.picker-view-mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 8;
  background: rgba(0, 0, 0, 0.3);
}
.picker-view-column-item{
  line-height: 50px;
  text-align: center;
  margin-left: 5rpx;
  margin-right: 5rpx;
}
.picker-view-btn{
  position: relative;
  height:10vh;
  width:100%;
  box-sizing: border-box;
  padding: 10px;
}
.picker-view-btn::after{
  /* f4f4f4 */
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  background-color: #f4f4f4;
}
.btn{
  font-weight: 500;
  color: #999;
  font-size: 16px;
}
.btn.sure{
  color: #1AAD16;
}