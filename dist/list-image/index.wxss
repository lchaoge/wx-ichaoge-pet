.list-image{
  display: flex;
  align-content: flex-start;
  flex-direction: row;
  flex-wrap: wrap;
}
.list-image .list-image-item{
  padding-right: 1px;
  padding-bottom: 1px;
  overflow: hidden;
  box-sizing: border-box;
  width: 33.333%;
  height: 100px;
  display: inline-flex;
  position: relative;
}
.list-image .list-image-item:nth-of-type(3n){
  padding-right: 0;
}
.list-image .list-image-item .image{
  display: block;
}