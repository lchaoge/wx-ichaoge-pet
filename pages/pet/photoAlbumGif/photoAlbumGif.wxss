.gif-content{
  padding: 10px;
  text-align: justify; 
}  
.gif-content .item{
  background-color: #fff;
  margin-bottom: 10px;
  display: block;
  border-radius: 3px;
  overflow: hidden;
  box-shadow: 0 0 5px rgba(0, 0, 0,0.3) !important;
}
.item-ava{
  display: block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}
.heart{
  width: 30rpx;
  height: 26rpx;
  margin-right: 8rpx;
}
.heart_{
  display: flex;
  align-items: center;
}
.item-img{
  width: 100%;
  display: block;
}
.item-title-box{
  font-size: 14px;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-family: 'PingFang SC-Medium';
  color: #1e1e1e;
  line-height: 16px;
}
.item .name{
  display: flex;
  padding: 5px 10px 10px 10px;
  align-items: center;
  font-size: 22rpx;
  color: #1e1e1e;
  font-family: 'PingFang SC-Medium';
}
.item-title-box{
  display: flex;
  position: relative;
  padding: 10px 10px 5px;
}
.name-title{
  flex: 1;
  margin-left: 18rpx;
  margin-right: 20rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.name text:last-child{
  flex: 0 0 30rpx;
  color: #c4c4c4;
  line-height: 10rpx;
  font-size: 14px;
}
.left,.right{
  display: inline-block;
  vertical-align: top;
  width: 49%;
}
.right{
  float: right;
}
.labelSort{
  padding: 0 10px;
  line-height: 16px;
}
.labelSort .tag{
  margin-right: 10px;
  margin-bottom: 10px;
  font-size: 12px;
  color: #5a6c90;
}

.addPhotoAlbum{
  padding: 0 15px;
  position: fixed !important;
  bottom: 30px;
  left: 50%;
  color: #000 !important;
  border: 1px solid #fce340 !important;
  background-color: #fce340 !important;
  box-shadow: 0px 2px 10px rgb(252, 227, 64) !important;
  font-size: 12px !important;
  height: 30px !important;
  line-height: 30px !important;
  border-radius: 30px !important;
  margin: 0 !important;
  transform:translateX(-50%);
}